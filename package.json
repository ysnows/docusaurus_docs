{
  "$schema": "https://enconvo.com/schemas/extension.json",
  "name": "docusaurus_docs",
  "version": "0.0.1",
  "description": "A Knowledge Base for Docusaurus Docs",
  "title": "Docusaurus Docs",
  "icon": "icon.png",
  "author": "EnconvoAI",
  "categories": [
    "Chat"
  ],
  "license": "MIT",
  "type": "module",
  "commands": [
    {
      "name": "docusaurus_docs",
      "icon": "icon.png",
      "title": "Docusaurus Docs",
      "description": "A Knowledge Base for Docusaurus Docs",
      "mode": "no-view",
      "targetCommand": "chat_with_doc/qa",
      "preferences": [
        {
          "name": "prompt",
          "description": "The prompt used to generate responses",
          "type": "textfield",
          "required": false,
          "placeholder": "The prompt used to generate responses",
          "default": "You are an helpful ai assistant",
          "title": "Prompt"
        },
        {
          "name": "kb_env",
          "description": "Knowledge Base Env",
          "type": "textfield",
          "required": false,
          "title": "Knowledge Base Env",
          "default": "docusaurus_docs",
          "visibility": "hidden"
        },
        {
          "name": "tableName",
          "description": "Knowledge Base Env",
          "type": "textfield",
          "required": false,
          "title": "Knowledge Base Env",
          "default": "7f15afd6f53eda0eeb8e500bd1c42ceb",
          "visibility": "hidden"
        },
        {
          "name": "websites",
          "description": "Knowledge Base Env",
          "type": "textfield",
          "required": false,
          "title": "Knowledge Base Env",
          "default": "",
          "visibility": "hidden"
        },
        {
          "name": "auto_audio_play",
          "description": "Automatically play result content",
          "type": "checkbox",
          "required": false,
          "title": "Automatically Play TTS Audio",
          "default": false
        },
        {
          "name": "tts_providers",
          "description": "The TTS provider to use.",
          "type": "extension",
          "required": false,
          "default": "default",
          "title": "TTS Provider"
        },
        {
          "name": "embedding",
          "description": "The model used to generate embedding",
          "type": "extension",
          "required": false,
          "default": "default",
          "title": "Embedding Model"
        },
        {
          "name": "llm",
          "description": "The model used to generate responses",
          "type": "extension",
          "required": false,
          "default": "default",
          "title": "LLM Model"
        },
        {
          "name": "responseLanguage",
          "description": "The language used to force LLM to respond",
          "type": "dropdown",
          "required": false,
          "title": "Response Language",
          "default": "auto",
          "data": [
            {
              "title": "auto",
              "value": "auto"
            },
            {
              "title": "中文简体",
              "value": "zh-Hans"
            },
            {
              "title": "中文繁体",
              "value": "zh-Hant"
            },
            {
              "title": "English",
              "value": "en"
            },
            {
              "title": "Japanese",
              "value": "ja"
            },
            {
              "title": "Korean",
              "value": "ko"
            },
            {
              "title": "French",
              "value": "fr"
            },
            {
              "title": "German",
              "value": "de"
            },
            {
              "title": "Spanish",
              "value": "es"
            }
          ]
        }
      ]
    }
  ],
  "dependencies": {
    "@enconvo/api": "^0.1.9",
    "@langchain/core": "^0.1.52"
  },
  "devDependencies": {
    "@types/node": "^18.17.14",
    "@types/react": "18.2.27",
    "eslint": "^8.33.0",
    "prettier": "^2.8.3",
    "tsup": "^7.2.0",
    "typescript": "^5.0.4"
  },
  "scripts": {
    "lint": "eslint src",
    "lint:fix": "npm run lint --fix",
    "format": "prettier --write \"**/*.ts\"",
    "format:check": "prettier --list-different \"**/*.ts\"",
    "build": "enconvo",
    "dev": "enconvo --dev",
    "publish": "enconvo --publish"
  }
}